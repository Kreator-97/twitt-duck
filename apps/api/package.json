{
  "name": "twitt-duck-api",
  "version": "0.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "node ./dist",
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --exit-child --watch src ./src/index.ts",
    "start-test-server": "dotenv -e .env.test -- ts-node-dev --respawn --exit-child --watch src ./src/index.ts",
    "test": "dotenv -e .env.test -- vitest --run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "migrate:test": "dotenv -e .env.test -- yarn prisma db push",
    "build:api": "yarn prepare-build && tsc -p .",
    "lint": "eslint ./src",
    "clean-public": "rm -rf ./src/public/*",
    "copy-react-app": "cp -r ../web/dist/* ./src/public/",
    "prepare-build": "yarn clean-public && yarn copy-react-app",
    "seed": "dotenv -e .env.test -- yarn ts-node ./src/seed/seed.ts"
  },
  "keywords": [],
  "author": "Donato Monzon",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "@types/formidable": "^2.0.5",
    "@types/node": "^18.11.9",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.32.0",
    "cors": "^2.8.5",
    "dotenv": "16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "4.18.1",
    "express-validator": "^6.14.2",
    "formidable": "^2.0.1",
    "google-auth-library": "^8.5.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.0.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.4.0",
    "supertest": "^6.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "^4.8.4",
    "vitest": "^0.24.5"
  }
}
